<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:paddingBottom="50dp"
    android:layout_height="wrap_content">

    <TextView
        android:textColor="@color/black"
        android:text="Add Pill"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/InputPillNameId"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="10dp"
        android:hint="Pill Name"
        android:textColor="@color/Green" />

    <EditText
        android:id="@+id/InputPillDescriptionId"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="10dp"
        android:hint="Pill Description"
        android:textColor="@color/Green" />
    
    <EditText
        android:id="@+id/EnterRemindTimesId"
        android:layout_marginStart="15dp"
        android:inputType="number"
        android:hint="0,1,2.."
        android:layout_gravity="start"
        android:layout_marginTop="10dp"
        android:layout_width="60dp"
        android:layout_height="40dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_marginTop="10dp"
        android:id="@+id/reminderTime_recycleView_Id"
        android:layout_marginHorizontal="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>




    <Button
        android:backgroundTint="@color/Green"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="20dp"
        android:id="@+id/add_PillBtnBottomSheet"
        android:text="Add Pill"
        android:layout_width="match_parent"
        android:layout_height="48dp"/>



</LinearLayout>