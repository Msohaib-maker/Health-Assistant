<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:paddingBottom="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="@color/black"
        tools:context=".SettingsFrag">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/summary"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_marginTop="22dp"
            android:layout_marginStart="20dp"
            android:textSize="22sp"/>

        <LinearLayout
            android:layout_marginHorizontal="15dp"
            android:layout_marginTop="80dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                app:cardCornerRadius="10dp"
                app:cardBackgroundColor="@color/Greyish"
                android:padding="4dp"
                android:layout_width="match_parent"
                android:layout_height="80dp">

                <TextView
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="8dp"
                    android:textSize="20sp"
                    android:text="Steps"
                    android:textColor="#FD440A"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>


                <TextView
                    android:id="@+id/SettingsStepDisplayId"
                    android:text="120 steps"
                    android:textColor="@color/white"
                    android:layout_marginStart="20dp"
                    android:layout_marginBottom="12dp"
                    android:textSize="18sp"
                    android:layout_gravity="bottom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                app:cardCornerRadius="10dp"
                app:cardBackgroundColor="@color/Greyish"
                android:layout_marginTop="10dp"
                android:padding="4dp"
                android:layout_width="match_parent"
                android:layout_height="100dp">

                <TextView
                    android:textColor="#F6DE0B"
                    android:text="Steps Units"
                    android:textSize="18sp"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <Spinner
                    android:id="@+id/SpinnerId"
                    android:background="#9E9E9E"
                    android:layout_width="150dp"
                    android:layout_marginBottom="15dp"
                    android:layout_marginStart="20dp"
                    android:layout_gravity="bottom"
                    android:layout_height="30dp"/>


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView

                app:cardBackgroundColor="@color/Greyish"
                app:cardCornerRadius="10dp"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="20dp"
                android:padding="4dp"
                android:layout_width="match_parent"
                android:layout_height="80dp">

                <TextView
                    android:layout_marginStart="20dp"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/lightBlue"
                    android:textSize="20sp"
                    android:text="Weight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <EditText
                    android:textColor="@color/white"
                    android:padding="8dp"
                    android:id="@+id/WeightInputSystemId"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="100dp"
                    android:background="@drawable/input_box"
                    android:layout_width="100dp"
                    android:layout_height="40dp"/>

                <Button
                    android:id="@+id/setWeightBtnId"
                    android:layout_marginEnd="20dp"
                    android:layout_gravity="end|center_vertical"
                    android:text="Set"
                    android:backgroundTint="#FD440A"
                    android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                app:cardCornerRadius="10dp"
                app:cardBackgroundColor="@color/Greyish"
                android:padding="4dp"
                android:layout_width="match_parent"
                android:layout_marginBottom="20dp"
                android:layout_height="80dp">

                <TextView
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="8dp"
                    android:textSize="20sp"
                    android:text="Calories"
                    android:textColor="#FD440A"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>


                <TextView

                    android:id="@+id/CaloriesDisplayId"
                    android:text="20 cals"
                    android:textColor="@color/white"
                    android:layout_marginStart="20dp"
                    android:layout_marginBottom="12dp"
                    android:textSize="18sp"
                    android:layout_gravity="bottom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>


            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                app:cardCornerRadius="10dp"
                app:cardBackgroundColor="@color/Greyish"
                android:padding="4dp"
                android:layout_width="match_parent"
                android:layout_height="100dp">

                <TextView
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="8dp"
                    android:textSize="20sp"
                    android:text="Name"
                    android:textColor="#FD440A"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>


                <EditText

                    android:background="@drawable/input_box"
                    android:id="@+id/PersonNameId"
                    android:hint="Name"
                    android:textColorHint="@color/white"
                    android:paddingHorizontal="10dp"
                    android:textColor="@color/white"
                    android:layout_marginStart="20dp"
                    android:layout_marginBottom="12dp"
                    android:textSize="18sp"
                    android:layout_marginTop="50dp"
                    android:layout_width="200dp"
                    android:layout_height="40dp"/>

                <Button
                    android:id="@+id/setNameSettingsId"
                    android:layout_marginEnd="20dp"
                    android:layout_gravity="end|center_vertical"
                    android:text="Set"
                    android:backgroundTint="#FD440A"
                    android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>


            </androidx.cardview.widget.CardView>


        </LinearLayout>

    </FrameLayout>

</ScrollView>

