<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".HeartFrag">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:background="@color/WhiteSmoke"
                android:paddingBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:background="@color/black">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="22dp"
                        android:layout_marginTop="15dp"
                        android:text="Exercises"
                        android:textColor="@color/white"
                        android:textSize="25sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="15dp"
                        android:layout_marginEnd="20dp"
                        android:src="@drawable/ic_baseline_directions_walk_24" />


                </RelativeLayout>

                <TextView
                    android:textStyle="bold"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="100dp"
                    android:textSize="20sp"
                    android:textColor="@color/black"
                    android:text="Suggested Exercises"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>


                <RelativeLayout
                    android:id="@+id/RecordStepsId"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_marginHorizontal="12dp"
                    android:layout_marginTop="140dp"
                    android:background="@drawable/exercise_ui"
                    android:elevation="4dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="10dp"
                        android:text="Record Steps"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/displayCaloriesId"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_marginStart="10dp"
                        android:layout_marginBottom="20dp"
                        android:text="Calories burnt are 0"
                        android:textColor="@color/black"
                        android:textSize="14sp" />


                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/PushUpsId"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_marginHorizontal="12dp"
                    android:layout_marginTop="260dp"
                    android:background="@drawable/exercise_ui"
                    android:elevation="4dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="10dp"
                        android:text="Push Ups"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:textSize="18sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_marginStart="10dp"
                        android:layout_marginBottom="20dp"
                        android:text="Calories burnt are 0"
                        android:textColor="@color/black"
                        android:textSize="14sp" />


                </RelativeLayout>


                <TextView
                    android:textStyle="bold"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="380dp"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:text="Fitness Articles/Trends"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>


                <androidx.recyclerview.widget.RecyclerView
                    android:background="#ededed"
                    android:id="@+id/ArticlesRecycleViewId"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginTop="420dp" />

                <ProgressBar
                    android:layout_marginTop="470dp"
                    android:layout_centerHorizontal="true"
                    android:indeterminate="true"
                    android:visibility="gone"
                    android:id="@+id/ProgressBarId"
                    android:layout_width="40dp"
                    android:layout_height="40dp"/>




            </RelativeLayout>

        </ScrollView>


    </FrameLayout>


</ScrollView>

